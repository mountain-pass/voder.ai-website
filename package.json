{
  "name": "voder.ai-website",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Voder pre-launch website - cinematic experience showcasing the future of AI-assisted development",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "clean": "rm -rf dist/ coverage/ .cache/ .vite/ .eslintcache",
    "format": "NODE_OPTIONS=\"--experimental-strip-types\" prettier . --write",
    "format:check": "NODE_OPTIONS=\"--experimental-strip-types\" prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "lint:css": "stylelint \"**/*.css\" --ignore-pattern \"**/coverage/**\" --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/build/**\" --ignore-pattern \"**/node_modules/**\" --ignore-pattern \"**/packages/**\" --ignore-pattern \"**/apps/**\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix --ignore-pattern \"**/coverage/**\" --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/build/**\" --ignore-pattern \"**/node_modules/**\" --ignore-pattern \"**/packages/**\" --ignore-pattern \"**/apps/**\"",
    "lint:html": "htmlhint \"**/*.html\" --ignore \"**/coverage/**,**/dist/**,**/build/**,**/node_modules/**,**/packages/**,**/apps/**\"",
    "lint:md": "markdownlint-cli2 --config .markdownlint.json README.md docs/**/*.md specs/**/*.md",
    "lint:md:fix": "markdownlint-cli2 --fix --config .markdownlint.json README.md docs/**/*.md specs/**/*.md",
    "verify": "npm run type-check && npm run lint:fix && npm run lint:css:fix && npm run lint:html && npm run lint:md:fix && npm run format && npm run build && npm run test:ci",
    "docs:setup": "node setup-package-docs.js --all",
    "docs:report": "npm run docs:setup && node setup-package-docs.js --report"
  },
  "dependencies": {
    "@microsoft/clarity": "^1.0.0",
    "gsap": "^3.13.0",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.17.0",
    "@types/three": "^0.180.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^60.0.0",
    "htmlhint": "^1.6.3",
    "jest-axe": "^9.0.0",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "markdownlint-cli2": "^0.18.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-css-modules": "^4.5.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4",
    "happy-dom": "^18.0.1"
  },
  "engines": {
    "node": ">=22.17.0"
  },
  "license": "UNLICENSED"
}
