{
  "name": "@voder/dev-config",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICESNED",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./testing": {
      "import": "./dist/src/testing/index.js",
      "types": "./dist/src/testing/index.d.ts"
    },
    "./prettier": {
      "import": "./dist/prettier.config.js",
      "types": "./dist/prettier.config.d.ts"
    },
    "./eslint": {
      "import": "./dist/eslint/index.js",
      "types": "./dist/eslint/index.d.ts"
    },
    "./typescript": {
      "import": "./dist/typescript/index.js",
      "types": "./dist/typescript/index.d.ts"
    },
    "./linters/markdown": {
      "import": "./dist/linters/markdown/index.js",
      "types": "./dist/linters/markdown/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "prettier.config.ts",
    "eslint/",
    "typescript/",
    "src/",
    "linters/"
  ],
  "scripts": {
    "generate:md-config": "tsx scripts/generate-markdownlint-config.ts",
    "prebuild": "npm run generate:md-config && npm run clean",
    "clean": "rm -rf dist/ coverage/ *.log *.txt .vite/ .cache/ .eslintcache",
    "type-check": "tsc -p tsconfig.build.json --noEmit",
    "build": "tsc -p tsconfig.build.json && npm run copy:assets",
    "copy:assets": "tsx ./scripts/copy-assets.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose --testTimeout=120000",
    "format": "NODE_OPTIONS=\"--experimental-strip-types\" prettier \"**/*.{ts,tsx,js,jsx,json,md}\" --write",
    "format:check": "NODE_OPTIONS=\"--experimental-strip-types\" prettier \"**/*.{ts,tsx,js,jsx,json,md}\" --check",
    "lint": "eslint . --ext .ts,.js --config ./eslint.config.ts",
    "lint:fix": "eslint . --ext .ts,.js --config ./eslint.config.ts --fix",
    "lint:md": "markdownlint-cli2 README.md docs/**/*.md",
    "lint:md:fix": "markdownlint-cli2 --fix README.md docs/**/*.md",
    "voder": "node ../../../voder/apps/voder-cli/index.js",
    "format:fix": "npm run format",
    "verify": "npm audit fix --force && npm run lint:fix && npm run lint:md:fix && npm run format && npm run build && npm run test:ci",
    "audit:ci": "\"npm audit --audit-level=moderate\""
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^60.0.0",
    "jiti": "^2.5.1",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vitest": "3.2.4"
  }
}
