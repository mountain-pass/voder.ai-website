{
  "name": "@voder/ui-tools",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js"
    }
  },
  "license": "UNLICENSED",
  "description": "Specialized development tooling for UI component libraries",
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "clean": "rm -rf dist/ coverage/ .cache/ .vite/ .eslintcache",
    "prepare": "node ../../setup-package-docs.js",
    "voder": "node ../../../voder/apps/voder-cli/index.js",
    "pretest": "npm run build"
  },
  "peerDependencies": {
    "autoprefixer": "^10.0.0",
    "jest-axe": "^9.0.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@voder/dev-config": "file:../dev-config",
    "autoprefixer": "^10.4.21",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "markdownlint-cli2": "^0.18.1",
    "postcss": "^8.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
