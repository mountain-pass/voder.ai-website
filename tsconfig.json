{
  "extends": "./config/typescript/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/config/*": ["./config/*"]
    },
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "config/**/*",
    "scripts/**/*",
    "**/*.config.ts",
    "**/*.config.js",
    "eslint.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "prettier.config.ts",
    "postcss.config.ts",
    "stylelint.config.ts",
    "htmlhint.config.js"
  ],
  "exclude": ["node_modules", "dist", "build", "coverage", "packages", "apps"]
}
